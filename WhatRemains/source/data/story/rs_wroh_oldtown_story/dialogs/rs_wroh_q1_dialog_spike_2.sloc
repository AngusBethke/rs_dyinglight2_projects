
import "lockit_globals.scr"

sub main()
{
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_001`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `I'm up top, where am I heading?`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_004`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `Is that where the 'signs of life' were spotted?`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_006`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `Right, nuclear bomb and all that, I'll radio when I'm there. Out.`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_007`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `Go visit an irradiated city Aiden, we need those supplies Aiden...`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_008`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `Why is it never Spike that does all of this crazy shit?!`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_LocalPlayer_010`)
    {
        RequiresVO(true);
        Actor(`LocalPlayer`);
        Text(En, ALL, `Uh... talk soon! Out.`);
