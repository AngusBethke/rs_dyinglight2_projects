    {
        RequiresVO(true);
        Actor(`Pilgrim`);
        Text(En, ALL, `It's a place we used to call the Embers' Towers.`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_Pilgrim_003`)
    {
        RequiresVO(true);
        Actor(`Pilgrim`);
        Text(En, ALL, `Should be two towers right next to each other, one slightly shorter than the other.`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_Pilgrim_005`)
    {
        RequiresVO(true);
        Actor(`Pilgrim`);
        Text(En, ALL, `Not exactly... but it is one of the highest spots in the city... provided it hasn't been flattened.`);
    }
    Entry(`DLG_RsWrohQ1DialogSpike2_Pilgrim_009`)
    {
        RequiresVO(true);
        Actor(`Pilgrim`);
        Text(En, ALL, `You didn't shut off the radio Aiden...`);
    }
